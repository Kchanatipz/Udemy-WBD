<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
    <style>
      form {
        display: flex;
        flex-direction: column;
        width: 40%;
      }

      input {
        margin-bottom: 15px;
      }

      button {
        align-self: self-end;
        width: 30%;
        margin-top: 15px;
        padding: 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
      }

      div {
        display: flex;
        justify-content: flex-end;
        width: 40%;
        margin-top: -10px;
      }

      a {
        align-self: self-end;
        margin-top: 15px;
        padding: 10px;
        background-color: #f44336;
        color: white;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <h2>Edit product</h2>
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
      <label for="name">Product Name</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= product.name %>"
        placeholder="product name"
        required
      />
      <label for="price">Price (Unit)</label>
      <input
        type="number"
        step="0.01"
        id="price"
        name="price"
        placeholder="product price"
        value="<%= product.price %>"
        required
      />
      <label for="category">Select category</label>
      <select name="category" id="category" required>
        <% for( let ctg of categories) { %>
        <option value="<%= ctg %>" <%=(product.category === ctg)? "selected":"" %> ><%= ctg %></option>
        <% } %>
      </select>
      <button>Submit</button>
    </form>
    <div>
      <a href="/products/<%= product._id %>">Cancel</a>
    </div>
  </body>
</html>
